{
  "manifest_version": 3,
  "name": "Kuviyam",
  "description": "Dump ideas and site-specific hooks while browsing.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Kuviyam"
  },
  "options_page": "options/options.html",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
